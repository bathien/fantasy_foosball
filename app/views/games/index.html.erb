<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>ID</th>
            <th>Match id</th>
            <th>Status</th>
            <th>Team 1 score</th>
            <th>Team 2 score</th>
            <th>Winner Team</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @games.each do |game| %>
            <tr>
              <td><%= game.id %></td>
              <td><%= game.match_id %></td>
              <td><%= game.status %></td>
              <td><%= game.team_1_score %></td>
              <td><%= game.team_2_score %></td>
              <td><%= game.winner_team&.name %></td>
              <td>
                <%= link_to edit_game_path(game), class: "btn btn-outline btn-info" do %>
                  Edit
                <% end %>
                <%= link_to 'Destroy', game, method: :delete, class: "btn btn-danger btn-outline", data: { confirm: 'Are you sure?' } %>

              </td>
            </tr>
          <% end if @games.any? %>
          </tbody>
        </table>
        <%= link_to "Add new", new_game_path, class: "btn btn-outline btn-success float-right" %>
      </div>
    </div>
  </div>
</div>

<br>
<% content_for :page_name do %>
  <%= "Games" %>
<% end %>
