<%# Rails flash messages styled for Bootstrap 4.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-message fixed-top alert-<%= name.to_s == "notice" ? "success" : "danger" %>" role="alert" style="z-index: 999999999999">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.alert').slideDown(500).delay(3000).slideUp(500);
  })
</script>
