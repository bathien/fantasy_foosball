<p id="notice"><%= notice %></p>

<h1>Team List</h1>
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Player 1 name</th>
            <th>Player 2 name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
            <% @teams.each do |team| %>
              <tr>
                <td><%= team.name %></td>
                <td><%= team&.players[0]&.full_name %></td>
                <td><%= team&.players[1]&.full_name %></td>
                <td><%= link_to 'Edit', edit_team_path(team) %></td>
                <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end if @teams&.any? %>
          </tbody>
        </table>
        <%= link_to "Add new team", new_team_path, class: "btn btn-outline btn-success float-right" %>
      </div>
    </div>
  </div>
</div>

<br>
<% content_for :page_name do %>
  <%= "Teams" %>
<% end %>
