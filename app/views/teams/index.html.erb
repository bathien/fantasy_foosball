<p id="notice"><%= notice %></p>

<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Player 1 name</th>
            <th>Player 2 name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
            <% @teams.each do |team| %>
              <tr>
                <td><%= team.name %></td>
                <td><%= team&.players[0]&.full_name %></td>
                <td><%= team&.players[1]&.full_name %></td>
                <td>
                  <%= link_to edit_team_path(team), class: "btn btn-outline btn-info" do %>
                    <i class="fa fa-edit"></i> Edit
                  <% end %>
                  <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-outline" do %>
                    <i class="fa fa-trash-o"></i> Destroy
                  <% end %>
                </td>
              </tr>
            <% end if @teams&.any? %>
          </tbody>
        </table>
        <%= link_to "Add new team", new_team_path, class: "btn btn-outline btn-success float-right" %>
      </div>
    </div>
  </div>
</div>

<br>
<% content_for :page_name do %>
  <%= "Teams" %>
<% end %>
